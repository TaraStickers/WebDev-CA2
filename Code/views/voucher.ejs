<%- include('partials/header') %>

  <body>
    <div class="top-page">
      <h1>PizzaCode</h1>
      <h3>Buy a voucher today</h3>

      <div class="logo">
        <img src="/images/logo.png" alt="logo" />
      </div>
    </div>

    <main>
      <div class="main-content-title">
        <div class="bookingButton">
          <br />
          <a href="/" class="page-btn">Menu</a>
          <a href="/bookings" class="page-btn">Book a table here</a>
        </div>
        <div class="main">
          <section id="voucher-scn" class="voucher-scn">
            <h2>Vouchers</h2>

            <p>
              We are located at 15 Dawson Street, Dublin City Centre.<br />
              Buy a voucher for someone today<br />
              Treat them this Christmas with vouchers up to €150!
            </p>

            <div class="voucher-buy">
              <h3>Purchase here</h3>

              <form id="voucher-form" class="person">
                <label for="voucher-amnt">Choose an option below:</label>
                <select id="voucher-amnt" name="amount" required>
                  <option value="">Select amount</option>
                  <option value="25">€25</option>
                  <option value="50">€50</option>
                  <option value="75">€75</option>
                  <option value="100">€100</option>
                  <option value="150">€150</option>
                </select>

                <label for="to">Receiver name:</label>
                <input id="to" type="text" name="to" required />

                <label for="mailto">Receiver email:</label>
                <input id="mailto" type="email" name="mailto" required />

                <label for="from">Sender name:</label>
                <input id="from" type="text" name="from" required />

                <button type="submit" id="buybutton" class="page-btn">
                  Buy now
                </button>
                <p id="voucher-msg" aria-live="polite"></p>
              </form>
            </div>

            <p class="contact">
              Phone:
              <a href="tel:+3531623344">+353 1623344</a><br />
              Email:
              <a href="mailto:reserve@pizzacode.ie">reserve@pizzacode.ie</a>
            </p>
          </section>
        </div>
      </div>
    </main>
<%- include('partials/footer') %>
